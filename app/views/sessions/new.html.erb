<div class="background-image-example">
  <div class="d-flex  mt-5 flex-column align-items-center justify-content-center">
    <div class="text-center background-white">
  <h1 class="text-center">Log in</h1>
    
     <%= form_with(url: login_path, scope: :session) do |f| %>
      <div class="my-div d-flex align-items-center justify-content-center mt-3 ">
        <%= f.label :email, class: "name-width" %>
        <%= f.email_field :email %>
      </div>

      <div class="my-div d-flex align-items-center justify-content-center mt-3 ">
        <%= f.label :password, class: "name-width" %>
        <%= f.password_field :password %>
      </div>
      <div class="my-div mt-3 ">
      <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

      <p class="mt-3">New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
    </div>
  </div>
</div>