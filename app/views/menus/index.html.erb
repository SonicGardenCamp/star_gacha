<div class="background-image-example">
  <h1>Menus#index</h1>
  <% @menus.each do |menu| %>
  
    <ul style="list-style: none; padding-left: 0;" class="d-flex menu align-items-center justify-content-center">
      <div>
        <% if fav?(menu.id) %>
                        <%= button_to toggle_record_path, method: :post, class: "fav-button", params: { id: menu.id } do %>
                          <i class="fa-solid fa-star star-y" aria-hidden="true"></i>
                        <% end %>
                      <% else %>
                        <%= button_to toggle_record_path, method: :post, class: "fav-button", params: { id: menu.id } do %>
                          <i class="fa-solid fa-star" aria-hidden="true"></i>
                        <% end %>
                      <% end %>
      </div>
      <div>
        <% menu.items.each do |item| %>
          <li class="menu-list text-center">
            <div>
              <%= item.product_name%>
            </div>
            <div>
              <%= item.price %>å†† <%= item.cal %>cal
            </div>
          </li>
        <% end %>
      </div>
    </ul>
  <% end %>
  <% if @menus.any? %>
    <%= will_paginate @menus, params: { controller: :menus, action: :index } %>
  <% end %>
</div>